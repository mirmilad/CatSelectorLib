<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:text="Select Image with Default Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="selectImage1"
        />

    <Button
        android:text="Select Image with Custom Style 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="selectImage2"
        />

    <Button
        android:text="Select Image with Custom Style 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="selectImage3"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"/>

</LinearLayout>